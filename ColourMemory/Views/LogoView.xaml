<Page x:Class="ColourMemory.Views.LogoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColourMemory.Views"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
      Title="Colour Memory">

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.2*" />
			<ColumnDefinition Width="0.6*" />
			<ColumnDefinition Width="0.2*" />
		</Grid.ColumnDefinitions>
		<Viewbox Grid.Column="1" Stretch="UniformToFill" HorizontalAlignment="Center" StretchDirection="DownOnly"  >
			<Image Source="pack://application:,,,/Resources/logo.png" IsVisibleChanged="Image_IsVisibleChanged"  />
		</Viewbox>
    </Grid>
</Page>
