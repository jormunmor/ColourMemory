<Page x:Class="ColourMemory.Views.StartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColourMemory.Views"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
      Title="Colour Memory">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.25*" />
			<ColumnDefinition Width="0.5*" />
			<ColumnDefinition Width="0.25*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<Button Grid.Row="0" Content="Play" Style="{StaticResource ButtonBase}" Click="Button_Click"  />
			<Button Grid.Row="1" Content="Highscores" Style="{StaticResource ButtonBase}" />
			<Button Grid.Row="2" Content="Exit" Style="{StaticResource ButtonBase}" />
		</Grid>
    </Grid>
</Page>
